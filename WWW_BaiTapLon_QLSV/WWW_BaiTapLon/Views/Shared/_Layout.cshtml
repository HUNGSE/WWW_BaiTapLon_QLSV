<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý sinh viên</title>
    <link href="~/Content/Site.css" rel="stylesheet"type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/styles.css" rel="stylesheet" type="text/css"/>
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
    <style>
        * {
            font-size: 1.1em;
        }
    </style>

</head>
<body class="sb-nav-fixed">
    <nav @*class="sb-topnav navbar navbar-expand navbar-dark"*@>
        @Html.ActionLink("Quản lý sinh viên", "SinhVien", "QuanLy", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 1.7em;" })
        @*@Html.ActionLink("Quản lý giảng viên", "GiangVien", "QuanLy", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 1.7em;" })*@
        @Html.ActionLink("Quản lý lớp học phần", "LopHocPhan", "QuanLy", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 1.7em;" })

        <!-- Navbar-->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <ul class="navbar-nav ml-auto ml-md-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown" style="font-size: 0.5em;">
                        <a class="dropdown-item" href="#">Settings</a>
                        <a class="dropdown-item" href="#">Activity Log</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="login.html">Logout</a>
                    </div>
                </li>
            </ul>
        </form>
    </nav>

    <div class="container body-content" style="margin-top:2em;">
        @RenderBody()
        <hr />
        <footer style="font-size: 1.2em;">
            <p>&copy; @DateTime.Now.Year - Nhóm 7</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>